# Call Analytics AI Platform - Environment Configuration Template
# Copy this file to .env and fill in your values

# Oracle Database Configuration
ORACLE_USER=verint_analytics
ORACLE_PASSWORD=your_secure_password_here
ORACLE_HOST=your-oracle-host
ORACLE_PORT=1521
ORACLE_SERVICE_NAME=FREEPDB1
ORACLE_POOL_MIN=10
ORACLE_POOL_MAX=50
ORACLE_POOL_INCREMENT=5
ORACLE_POOL_TIMEOUT=60
ORACLE_TABLE_TRANSCRIPTIONS=TRANSCRIPTIONS
ORACLE_TABLE_SUMMARIES=SUMMARIES
ORACLE_TABLE_AI_METADATA=AI_METADATA

# Security Configuration
JWT_SECRET=your-very-long-random-jwt-secret-key-here
JWT_EXPIRY=24h
API_KEY_SECRET=your-api-key-secret-here

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password-here
REDIS_DB=0

# OpenSearch Configuration
OPENSEARCH_HOST=opensearch
OPENSEARCH_PORT=9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=your-opensearch-password-here

# API Configuration
NODE_ENV=production
PORT=3000
API_PREFIX=/api/v1
ALLOWED_ORIGINS=https://your-domain.com
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# ML Service Configuration
ML_SERVICE_HOST=ml-service
ML_SERVICE_PORT=8000
ML_API_KEY=your-ml-service-api-key

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_LEVEL=info
LOG_FORMAT=json

# AWS Configuration (for Neptune, S3, etc.)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Neptune Graph Database (Future Use)
NEPTUNE_ENDPOINT=your-neptune-cluster.region.neptune.amazonaws.com
NEPTUNE_PORT=8182

# Backup Configuration
BACKUP_S3_BUCKET=call-analytics-backups
BACKUP_RETENTION_DAYS=30

# Feature Flags
ENABLE_REAL_TIME_CDC=true
ENABLE_AI_ANALYSIS=true
ENABLE_GRAPH_ANALYTICS=false
ENABLE_MCP_INTEGRATION=true